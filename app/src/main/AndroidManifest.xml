<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.id.peers">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".VerificationActivity"></activity>
        <activity
            android:name=".loans.LoanApplicationConfirmationActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".loans.RepaymentCollectionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".loans.LoanDisbursementActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".loans.LoanApplicationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TermsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarTheme" />
        <activity
            android:name=".members.MemberAcquisitionConfirmationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".members.MemberAcquisitionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".forgot.ForgotPasswordActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarTheme" />
        <activity
            android:name=".login.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarTheme" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>