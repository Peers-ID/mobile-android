<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/bg_body_peers"
    android:orientation="vertical"
    android:layout_margin="@dimen/activity_horizontal_margin"
    android:padding="@dimen/activityPadding"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".pinjaman.data.DataPenjaminFragment">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/nama_penjamin_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_between"
            app:errorEnabled="true" >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/nama_penjamin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/nama_penjamin"
                android:inputType="text"
                android:selectAllOnFocus="true" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/no_hp_penjamin_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_between"
            app:errorEnabled="true" >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/no_hp_penjamin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/no_hp_penjamin"
                android:inputType="text"
                android:selectAllOnFocus="true" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/hubungan_penjamin_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_between"
            app:errorEnabled="true" >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/hubungan_penjamin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hubungan_penjamin"
                android:inputType="text"
                android:selectAllOnFocus="true" />

        </com.google.android.material.textfield.TextInputLayout>

        <include layout="@layout/button_bottom" />

</LinearLayout>