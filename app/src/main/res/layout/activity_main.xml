<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="centerInside"
        android:src="@drawable/logo_splash_screen"
        android:background="@drawable/shape_top_menu"/>

    <TextView
        android:id="@+id/greeting"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        app:rowCount="2"
        app:columnCount="2"
        app:orientation="horizontal"
        tools:context=".MainActivity">

        <androidx.cardview.widget.CardView
            android:id="@+id/member_acquisition"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_rowSpan="1"
            app:layout_columnSpan="1"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_card_view"
                android:scaleType="fitXY"/>

            <TextView
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:paddingTop="32dp"
                android:paddingBottom="32dp"
                android:drawableTop="@drawable/ic_pinjaman"
                android:textAlignment="center"
                android:text="@string/pinjaman"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/anggota"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_rowSpan="1"
            app:layout_columnSpan="1"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_card_view"
                android:scaleType="fitXY"/>

            <TextView
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:paddingTop="32dp"
                android:paddingBottom="32dp"
                android:drawableTop="@drawable/ic_anggota"
                android:textAlignment="center"
                android:text="@string/anggota"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/pembayaran_cicilan"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_rowSpan="1"
            app:layout_columnSpan="1"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_card_view"
                android:scaleType="fitXY"/>

            <TextView
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:paddingTop="32dp"
                android:paddingBottom="32dp"
                android:drawableTop="@drawable/ic_pembayaran_cicilan"
                android:textAlignment="center"
                android:text="@string/pembayaran_cicilan"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/simpanan_anggota"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_rowSpan="1"
            app:layout_columnSpan="1"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_card_view"
                android:scaleType="fitXY"/>

            <TextView
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:paddingTop="32dp"
                android:paddingBottom="32dp"
                android:drawableTop="@drawable/ic_simpanan_anggota"
                android:textAlignment="center"
                android:text="@string/simpanan_anggota"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </androidx.cardview.widget.CardView>


    </androidx.gridlayout.widget.GridLayout>
</LinearLayout>




