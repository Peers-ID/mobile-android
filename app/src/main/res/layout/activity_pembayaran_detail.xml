<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pembayaran.PembayaranDetailActivity">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_view_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/activityPadding"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activityPadding"
                android:layout_marginBottom="@dimen/margin_between"
                android:background="@drawable/bg_body_peers"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/placeholderTextHeight"
                    android:layout_marginTop="@dimen/margin_between"
                    android:background="@color/background" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/placeholderTextHeight"
                    android:layout_marginTop="@dimen/margin_between"
                    android:background="@color/background" />
<!--                <View-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="@dimen/placeholderTextHeight"-->
<!--                    android:layout_marginTop="@dimen/margin_between"-->
<!--                    android:background="@color/background" />-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activityPadding"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="@dimen/margin_between"
                android:background="@drawable/bg_body_peers"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/placeholderTextHeight"
                    android:layout_marginTop="@dimen/margin_between"
                    android:layout_marginBottom="@dimen/margin_between"
                    android:background="@color/background" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="@dimen/margin_between"
                    android:background="@color/colorGrey" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/placeholderTextHeight"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:background="@color/background" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/placeholderTextHeight"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:background="@color/background" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/placeholderTextHeight"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:background="@color/background" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/placeholderTextHeight"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:background="@color/background" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/placeholderTextHeight"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:background="@color/background" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/placeholderTextHeight"
                    android:layout_marginTop="24dp"
                    android:background="@color/background" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/placeholderTextHeight"
                    android:layout_marginTop="32dp"
                    android:background="@color/background" />
            </LinearLayout>
        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

    <include layout="@layout/layout_empty_data"/>

    <LinearLayout
        android:id="@+id/pembayaran_detail_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/activityPadding"
        android:orientation="vertical"
        android:visibility="gone">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activityPadding"
            android:layout_marginBottom="@dimen/margin_between"
            android:background="@drawable/bg_body_peers">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:textColor="@color/colorText"
                    android:textStyle="bold"
                    android:text="@string/nama_anggota"/>
                <TextView
                    android:id="@+id/nama_anggota"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="4dp"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:textColor="@color/colorText"
                    android:textStyle="bold"
                    android:text="@string/nama_product"/>
                <TextView
                    android:id="@+id/nama_product"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="4dp"/>
            </TableRow>
<!--            <TableRow-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content">-->
<!--                <TextView-->
<!--                    android:layout_width="0dp"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_weight="1"-->
<!--                    android:layout_margin="4dp"-->
<!--                    android:textColor="@color/colorText"-->
<!--                    android:textStyle="bold"-->
<!--                    android:text="@string/sisa_pinjaman"/>-->
<!--                <TextView-->
<!--                    android:id="@+id/sisa_pinjaman"-->
<!--                    android:layout_width="0dp"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_weight="1"-->
<!--                    android:layout_margin="4dp"/>-->
<!--            </TableRow>-->
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activityPadding"
            android:background="@drawable/bg_body_peers">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_between">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:textColor="@color/colorText"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="@string/detail_angsuran"/>
            </TableRow>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/margin_between"
                android:layout_marginBottom="@dimen/margin_between"
                android:background="@color/colorText" />
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_between">
                <TextView
                    android:id="@+id/tanggal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_between">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:textColor="@color/colorText"
                    android:textStyle="bold"
                    android:text="@string/angsuran"/>
                <TextView
                    android:id="@+id/angsuran"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="4dp"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_between">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:textColor="@color/colorText"
                    android:textStyle="bold"
                    android:text="@string/simpanan_wajib"/>
                <TextView
                    android:id="@+id/simpanan_wajib"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="4dp"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_between">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:textColor="@color/colorText"
                    android:textStyle="bold"
                    android:text="@string/denda"/>
                <TextView
                    android:id="@+id/denda"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="4dp"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_between">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:textColor="@color/colorText"
                    android:textStyle="bold"
                    android:text="@string/total_pembayaran"/>
                <TextView
                    android:id="@+id/total_pembayaran"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="4dp"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:textColor="@color/colorText"
                    android:textStyle="bold"
                    android:text="@string/simpanan_sukarela"/>
                <EditText
                    android:id="@+id/simpanan_sukarela"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:autofillHints="@string/simpanan_sukarela"
                    android:hint="@string/simpanan_sukarela"
                    android:text="@string/zero"
                    android:inputType="number"
                    android:layout_margin="4dp"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:textColor="@color/colorText"
                    android:textStyle="bold"
                    android:text="@string/jumlah_setoran"/>
                <EditText
                    android:id="@+id/jumlah_setoran"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:autofillHints="@string/jumlah_setoran"
                    android:hint="@string/jumlah_setoran"
                    android:text="@string/zero"
                    android:inputType="number"
                    android:layout_margin="4dp"/>
            </TableRow>
        </TableLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <Button
                android:id="@+id/bayar"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="@string/bayar"
                android:theme="@style/PinjamanStyle"
                android:background="@drawable/ic_button_bawah"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/bayar_dengan_simpanan"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="start"
                android:text="@string/bayar_dengan_simpanan"
                android:theme="@style/PinjamanStyle"
                android:background="@drawable/ic_button_bawah"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>